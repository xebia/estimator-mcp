@page "/countables"
@inject ICatalogDataProvider DataProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Countables</PageTitle>

<h1>Countables</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="CreateNew">
        <i class="bi bi-plus-circle"></i> Create New Countable
    </button>
</div>

@if (countables == null)
{
    <p><em>Loading...</em></p>
}
else if (!countables.Any())
{
    <p><em>No countables found. Click "Create New Countable" to add one.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var countable in countables)
            {
                <tr>
                    <td>@countable.Id</td>
                    <td>@countable.Name</td>
                    <td>@countable.Description</td>
                    <td>@countable.Category</td>
                    <td>
                        <button class="btn btn-sm btn-secondary" @onclick="() => Edit(countable.Id)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(countable.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Countable>? countables;

    protected override async Task OnInitializedAsync()
    {
        await LoadCountables();
    }

    private async Task LoadCountables()
    {
        countables = await DataProvider.GetCountablesAsync();
    }

    private void CreateNew()
    {
        Navigation.NavigateTo("/countables/new");
    }

    private void Edit(string id)
    {
        Navigation.NavigateTo($"/countables/edit/{id}");
    }

    private async Task Delete(string id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete countable '{id}'?"))
        {
            await DataProvider.DeleteCountableAsync(id);
            await LoadCountables();
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
