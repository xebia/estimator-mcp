@page "/features"
@inject ICatalogDataProvider DataProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Features</PageTitle>

<h1>Features</h1>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="CreateNew">
        <i class="bi bi-plus-circle"></i> Create New Feature
    </button>
</div>

@if (features == null)
{
    <p><em>Loading...</em></p>
}
else if (!features.Any())
{
    <p><em>No features found. Click "Create New Feature" to add one.</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var feature in features)
            {
                <tr>
                    <td>@feature.Id</td>
                    <td>@feature.Name</td>
                    <td>@feature.Description</td>
                    <td>@feature.Category</td>
                    <td>
                        <button class="btn btn-sm btn-secondary" @onclick="() => Edit(feature.Id)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(feature.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Feature>? features;

    protected override async Task OnInitializedAsync()
    {
        await LoadFeatures();
    }

    private async Task LoadFeatures()
    {
        features = await DataProvider.GetFeaturesAsync();
    }

    private void CreateNew()
    {
        Navigation.NavigateTo("/features/new");
    }

    private void Edit(string id)
    {
        Navigation.NavigateTo($"/features/edit/{id}");
    }

    private async Task Delete(string id)
    {
        if (await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete feature '{id}'?"))
        {
            await DataProvider.DeleteFeatureAsync(id);
            await LoadFeatures();
        }
    }

    [Inject]
    private IJSRuntime JSRuntime { get; set; } = default!;
}
