@page "/features/new"
@page "/features/edit/{id}"
@inject ICatalogDataProvider DataProvider
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(IsNew ? "Create New Feature" : $"Edit Feature: {feature.Name}")</PageTitle>

<h1>@(IsNew ? "Create New Feature" : "Edit Feature")</h1>

@if (feature == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <EditForm Model="feature" OnValidSubmit="Save">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="id" class="form-label">ID</label>
            <InputText id="id" class="form-control" @bind-Value="feature.Id" disabled="@(!IsNew)" />
            <div class="form-text">Unique identifier (lowercase, hyphens allowed). Cannot be changed after creation.</div>
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <InputText id="name" class="form-control" @bind-Value="feature.Name" />
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <InputTextArea id="description" class="form-control" @bind-Value="feature.Description" rows="3" />
        </div>

        <div class="mb-3">
            <label for="category" class="form-label">Category</label>
            <InputText id="category" class="form-control" @bind-Value="feature.Category" />
            <div class="form-text">Optional grouping (e.g., "feature", "integration", "devops", "data", "qa").</div>
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
        </div>
    </EditForm>
}

@code {
    [Parameter]
    public string? Id { get; set; }

    private Feature feature = new();
    private bool IsNew => string.IsNullOrEmpty(Id);

    protected override async Task OnInitializedAsync()
    {
        if (!IsNew && Id != null)
        {
            var existing = await DataProvider.GetFeatureAsync(Id);
            if (existing != null)
            {
                feature = existing;
            }
            else
            {
                Navigation.NavigateTo("/features");
            }
        }
        else
        {
            feature = new Feature();
        }
    }

    private async Task Save()
    {
        await DataProvider.SaveFeatureAsync(feature);
        Navigation.NavigateTo("/features");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/features");
    }
}
